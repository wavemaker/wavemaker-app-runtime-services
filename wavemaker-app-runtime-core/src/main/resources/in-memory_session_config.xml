<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.wavemaker.runtime.session.WMInMemorySessionRepository" id="sessionRepository">
        <property name="defaultMaxInactiveInterval" value="#{${security.general.session.timeout} * 60}"/>
    </bean>

    <bean id="sessionRegistry" class="org.springframework.session.security.SpringSessionBackedSessionRegistry">
        <constructor-arg ref="sessionRepository"/>
    </bean>

</beans>
