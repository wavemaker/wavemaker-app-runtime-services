<hibernate-mapping>

    <query 
        name="getCustomerAddressById"
        comment="Lookup a single CustomerAddress instance by primary key value(s)
                 @single-result">
        
        <query-param name="id" type="com.wavemaker.runtime.data.sample.adventure.CustomerAddressId"/>

        <![CDATA[
           from CustomerAddress _a where _a.id=:id 
        ]]>

    </query>

    
    <query 
        name="getCustomerAddressTotalCount"
        comment="Get total number of CustomerAddress rows
                 @group com.wavemaker.runtime.data.sample.adventure.CustomerAddress
                 @service-excluded
                 @single-result">
        
        <![CDATA[
           select count(_a) from CustomerAddress _a 
        ]]>

    </query>    
    

</hibernate-mapping>
