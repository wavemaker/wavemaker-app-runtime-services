        name="getRegionsTotalCount"
        comment="Get total number of Regions rows
                 @group com.wavemaker.runtime.data.sample.orahr.Regions
                 @service-excluded
                 @single-result">
        
        <![CDATA[
           select count(_a) from Regions _a 
        ]]>

    </query>    
    

</hibernate-mapping>
