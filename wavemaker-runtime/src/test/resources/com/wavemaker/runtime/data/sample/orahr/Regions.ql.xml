<hibernate-mapping>

    <query 
        name="getRegionsById"
        comment="Lookup a single Regions instance by primary key value(s)
                 @single-result">
        
        <query-param name="id" type="java.math.BigDecimal"/>

        <![CDATA[
           from Regions _a where _a.id=:id 
        ]]>

    </query>

    
